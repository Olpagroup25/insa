<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- delivery.carrier form view: add pickup_partner_id            -->
    <!-- ============================================================ -->
    <record id="view_delivery_carrier_form_inherit_pickup" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.pickup</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']" position="inside">
                <field name="is_pickup_point" widget="boolean_toggle"/>
                <field name="pickup_partner_id"
                       invisible="not is_pickup_point"/>
                <field name="pickup_hours"
                       placeholder="Ej: Lunes a Viernes 8:00 - 18:00&#10;SÃ¡bados 9:00 - 13:00"
                       invisible="not is_pickup_point"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- delivery.carrier list view: add pickup_partner_id            -->
    <!-- ============================================================ -->
    <record id="view_delivery_carrier_list_inherit_pickup" model="ir.ui.view">
        <field name="name">delivery.carrier.list.inherit.pickup</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="pickup_partner_id" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
