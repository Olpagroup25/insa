<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- Record Rule: Portal users can only read their own pickings   -->
    <!-- ============================================================ -->
    <record id="rule_stock_picking_portal_pickup" model="ir.rule">
        <field name="name">Pickup Point: own pickings only</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="domain_force">[('pickup_partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record Rule: Portal users can read moves of their pickings -->
    <record id="rule_stock_move_portal_pickup" model="ir.rule">
        <field name="name">Pickup Point: own picking moves only</field>
        <field name="model_id" ref="stock.model_stock_move"/>
        <field name="domain_force">[('picking_id.pickup_partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record Rule: Portal users can read move lines of their pickings -->
    <record id="rule_stock_move_line_portal_pickup" model="ir.rule">
        <field name="name">Pickup Point: own picking move lines only</field>
        <field name="model_id" ref="stock.model_stock_move_line"/>
        <field name="domain_force">[('picking_id.pickup_partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
